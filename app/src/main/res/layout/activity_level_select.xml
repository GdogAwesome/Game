<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id = "@+id/level_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"
    android:background="@drawable/window"
    tools:context="com.example.bradmobile.testtexture.LevelSelect">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/btn_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="3" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="6" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="9" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="Previous" />

            <TextView />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blank_btn"
                android:text="Next" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "2sp"
        android:gravity="center_horizontal"
        android:text="Select a Level"/>

</GridLayout>
